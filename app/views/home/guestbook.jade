extends ../layouts/index

block content  
  #page-header
    .container
      .col-md-12
        h1 GUEST SERVICES
  #content1.container
    .col-md-8
      .content-page        
        form.form-horizontal(role="form",style="padding: 60px 0px;", method='post',action='/guestbookpost')
          input(type="hidden",name="url")
          .form-group
            label.col-sm-2(for="inputTitle",control-label) Title
            .col-sm-10
              input.form-control#inputTitle(type="text",placeholder="Title",name='title',required)
          .form-group
            label.col-sm-2(for="inputName",control-label) Name
            .col-sm-10
              input.form-control#inputName(type="text",placeholder="Name",name='name',required)
          .form-group
            label.col-sm-2(for="inputEmail",control-label) Email
            .col-sm-10
              input.form-control#inputEmail(type="email",placeholder="Email",name='email',required)
          .form-group
            label.col-sm-2(for="inputContent",control-label) Content
            .col-sm-10            
              textarea.form-control(rows="3",placeholder="content",name='content',required)
          .form-group            
            .col-sm-10.col-sm-offset-2
              button.btn.btn-default(type="submit") Submit
        
    .col-md-4.contactdetails
      include ../includes/right-widget
  script.
    $('input[name="url"]').val(document.URL);
      

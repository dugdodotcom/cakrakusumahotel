extends auth

block auth
  form.signup.form-horizontal(action="/users", method="post")
    .control-group
      label.control-label(for='name') First name
      .controls
        input#name.form-control(type='text', name="firstname", placeholder='First name', value=user.firstname)
    .control-group
      label.control-label(for='name') Last name
      .controls
        input#name.form-control(type='text', name="lastname", placeholder='Last name', value=user.lastname)
    .control-group
      label.control-label(for='name') Username
      .controls
        input#name.form-control(type='text', name="username", placeholder='Username', value=user.username)
    .control-group
      label.control-label(for='email') Email
      .controls
        input#email.form-control(type='text', name="email", placeholder='Email', value=user.email)
    .control-group
      label.control-label(for='password') Password
      .controls
        input#password.form-control(type='password', name="password", placeholder='Password')
    .control-group
      label.control-label(for='name') Phone
      .controls
        input#name.form-control(type='text', name="phone", placeholder='Phone', value=user.phone)
    .control-group
      label.control-label(for='name') Address
      .controls
        textarea.form-control(name="address",placeholder="Address")=user.address
        
    .form-actions
      button.btn.btn-primary(type='submit') Sign up
      &nbsp;
      | or&nbsp;
      a.show-login(href="/signin") login
